#include<stdio.h>
#define MAX 100
#include<string.h>
struct poly{
    int coeff;
    int expo;
};
int main(){
    int n1,n2,i,j;
    printf("enter the number of terms:");
    scanf("%d",&n1);
    struct poly p1[ MAX],p2[ MAX],result[ MAX];
    printf("enter the coeff and exponent:");
    for(i=0;i<n1;i++){
        scanf("%d%d",&p1[i].coeff,&p1[i].expo);
    }
    for(i=0;i<n1;i++){
       for(j=i+1;j<n1;j++)
       {
           if(p1[i].expo<p1[j].expo)
           {
               int temp=p1[i].expo;
               p1[i].expo=p1[j].expo;
               p1[j].expo=temp;
               
               
                temp=p1[i].coeff;
               p1[i].coeff=p1[j].coeff;
               p1[j].coeff=temp;
           }
           if(p1[i].expo == p1[j].expo) {
    p1[i].coeff = p1[i].coeff + p1[j].coeff;
    p1[j].coeff = 0;   // mark as merged so it wonâ€™t print again
}

       }
        }
        for(i=0;i<n1;i++){
            if(p1[i].coeff!=0){
     printf("%dx^%d",p1[i].coeff,p1[i].expo);
    if (i!=n1-1){
        printf("+");
    }
    }
    }
    printf("\n");
    printf("-----------------------------------------------");
    printf("-----------------------------------------------");
    printf("\n");
    printf("enter the number of terms:");
    scanf("%d",&n2);
    
    printf("enter the coeff and exponent:");
    for(i=0;i<n2;i++){
        scanf("%d%d",&p2[i].coeff,&p2[i].expo);
    }
    for(i=0;i<n2;i++){
       for(j=i+1;j<n2;j++)
       {
           if(p2[i].expo<p2[j].expo)
           {
               int temp=p2[i].expo;
               p2[i].expo=p2[j].expo;
               p2[j].expo=temp;
           }
          if(p2[i].expo == p2[j].expo) {
    p2[i].coeff = p2[i].coeff + p2[j].coeff;
    p2[j].coeff = 0;  
           }
       }
        }
       for(i=0;i<n2;i++){
            if(p2[i].coeff!=0){
     printf("%dx^%d",p2[i].coeff,p2[i].expo);
    if (i!=n2-1){
        printf("+");
    }
    }
    }
}
